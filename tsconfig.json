{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "pretty": false,
    "sourceMap": true,
    "target": "ES2017",
    "outDir": "./dist",
    "baseUrl": "./app"
  },
  "include": [
    "app/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}